#include <stdio.h>
#include <stdlib.h>

int sumnum(int n,int s)
{
    if(n==0)
    return s ;
    if(n%2==1)
    {
     n=n-1;
     s=s+n;
     sumnum(n-2,s);
    }
    else
   {
    s=s+n;

    sumnum(n-2,s);


}}




int main()
{
   int n,sum=0;
   scanf("%d",&n);
   sum=sumnum(n,sum);
   printf("%d",sum);
    return 0;
}
